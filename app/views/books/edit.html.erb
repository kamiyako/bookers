<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--edit-->
<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <p><%= f.submit 'Update Book' %></p>
  
<% end %>

<!--show back-->
<p><%= link_to "show", book_path(@book.id) %> | <%= link_to "back", books_path %></p>